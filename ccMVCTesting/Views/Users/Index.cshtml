            @Html.DisplayNameFor(model => model.AuthUserID)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.OriginalEMail)<br />
            @Html.DisplayFor(modelItem => item.CurrentEMail)
        </td>
        <td>
            - @Html.DisplayFor(modelItem => item.Created)<br />
            - @Html.DisplayFor(modelItem => item.Confirmed)<br />
            - @Html.DisplayFor(modelItem => item.LastUpdated)<br />
            - @Html.DisplayFor(modelItem => item.LastLogin)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Active)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FailedAttempts)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DefaultCurrencyID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AuthUserID)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.UserID }) |
            @Html.ActionLink("Details", "Details", new { id=item.UserID }) |
