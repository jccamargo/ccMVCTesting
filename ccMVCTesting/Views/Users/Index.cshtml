@model IEnumerable<ccMVCTesting.Model.User>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.OriginalEMail)<br/>
            @Html.DisplayNameFor(model => model.CurrentEMail)
        </th>
        <th class="col-md-3">
            - @Html.DisplayNameFor(model => model.Created)<br />
            - @Html.DisplayNameFor(model => model.Confirmed)<br />
            - @Html.DisplayNameFor(model => model.LastUpdated)<br />
            - @Html.DisplayNameFor(model => model.LastLogin)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Active)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FailedAttempts)
        </th>
